<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetActivity"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/wing_pet"
            android:layout_marginTop="@dimen/pet_petAct_vertical_margin"
            android:layout_marginBottom="@dimen/pet_petAct_vertical_margin"
            android:layout_centerInParent="true"
            android:contentDescription="Wing"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pet_petAct_horizontal_margin"
            android:layout_marginRight="@dimen/pet_petAct_horizontal_margin" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/foot_pet"
            android:layout_marginTop="@dimen/pet_petAct_vertical_margin"
            android:layout_marginBottom="@dimen/pet_petAct_vertical_margin"
            android:layout_centerInParent="true"
            android:contentDescription="Foot"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pet_petAct_horizontal_margin"
            android:layout_marginRight="@dimen/pet_petAct_horizontal_margin" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/body_pet"
            android:layout_marginTop="@dimen/pet_petAct_vertical_margin"
            android:layout_marginBottom="@dimen/pet_petAct_vertical_margin"
            android:layout_centerInParent="true"
            android:contentDescription="Body"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pet_petAct_horizontal_margin"
            android:layout_marginRight="@dimen/pet_petAct_horizontal_margin" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/head_pet"
            android:layout_marginTop="@dimen/pet_petAct_vertical_margin"
            android:layout_marginBottom="@dimen/pet_petAct_vertical_margin"
            android:layout_centerInParent="true"
            android:contentDescription="Head"
            android:scaleType="fitCenter"
            android:layout_marginLeft="@dimen/pet_petAct_horizontal_margin"
            android:layout_marginRight="@dimen/pet_petAct_horizontal_margin" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/distance_petAct">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/headSelect"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/button_petAct_vertical_margin"
                    android:layout_marginBottom="@dimen/button_petAct_vertical_margin"
                    android:background="@drawable/button_bg"
                    android:contentDescription="Change Head" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/bodySelect"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="@dimen/button_petAct_vertical_margin"
                    android:layout_marginBottom="@dimen/button_petAct_vertical_margin"
                    android:background="@drawable/button_bg"
                    android:contentDescription="Change Body" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/distance_petAct">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/wingSelect"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/button_petAct_vertical_margin"
                    android:layout_marginBottom="@dimen/button_petAct_vertical_margin"
                    android:background="@drawable/button_bg"
                    android:contentDescription="Change Wing"
                    android:scaleType="fitCenter" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/footSelect"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/button_petAct_vertical_margin"
                    android:layout_marginBottom="@dimen/button_petAct_vertical_margin"
                    android:background="@drawable/button_bg"
                    android:contentDescription="Change Foot"
                    android:scaleType="fitCenter" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/petInfo"
                android:textSize="25sp"
                android:background="@drawable/border_shape"
                android:padding="10dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
